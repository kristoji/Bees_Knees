{
  "base_model_name": "deepseek-ai/DeepSeek-R1-0528-Qwen3-8B",
  "gin_embedding_dim": 256,
  "llm_token_dim": 4096,
  "move_embedding_mode": "difference",
  "projection_hidden_dim": 1024,
  "projection_dropout": 0.1,
  "projection_num_layers": 2,
  "projection_activation": "gelu",
  "lora_r": 16,
  "lora_alpha": 32,
  "lora_dropout": 0.1,
  "lora_target_modules": [
    "q_proj",
    "k_proj",
    "v_proj",
    "o_proj",
    "gate_proj",
    "up_proj",
    "down_proj"
  ],
  "use_4bit": true,
  "bnb_4bit_compute_dtype": "float16",
  "bnb_4bit_quant_type": "nf4",
  "use_nested_quant": false,
  "max_seq_length": 2048,
  "learning_rate": 0.0002,
  "projection_lr": 0.001,
  "num_epochs": 3,
  "batch_size": 4,
  "gradient_accumulation_steps": 4,
  "warmup_steps": 100,
  "weight_decay": 0.01,
  "max_grad_norm": 1.0,
  "move_loss_weight": 1.0,
  "state_loss_weight": 1.0,
  "board_token_id": null,
  "move_token_id": null,
  "chosen_move_token_id": null,
  "next_state_token_id": null,
  "output_dir": "models/hive_llm",
  "logging_steps": 10,
  "save_steps": 500,
  "eval_steps": 500
}